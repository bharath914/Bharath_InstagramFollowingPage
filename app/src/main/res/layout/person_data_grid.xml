<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_15sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/GridProfileImage"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/GridhandleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center_vertical"
        android:text="Virat kohli singh"
        android:textSize="@dimen/_13sdp"

         android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@id/GridProfileImage"
        app:layout_constraintStart_toStartOf="@id/GridProfileImage"
        app:layout_constraintTop_toBottomOf="@id/GridProfileImage"


        />

    <Button
        android:id="@+id/GridfollowButton"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/follow_button"
        android:text="Follow"

        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="@id/GridProfileImage"
        app:layout_constraintStart_toStartOf="@id/GridProfileImage"
        app:layout_constraintTop_toBottomOf="@id/GridhandleName"
        app:strokeColor="@color/blueColor" />

</androidx.constraintlayout.widget.ConstraintLayout>